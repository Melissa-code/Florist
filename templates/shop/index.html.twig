{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/shop.css') }}">
{% endblock css %}

{% block title %}
    Boutique
{% endblock %}


{% block main %}

    <div class="row">
        <div class="container-fluid">
            <div class="row">

                {#  Title #}

                <section class="col-12 title pt-4">
                    <h1 class="text-center mb-4">Nos Fleurs</h1>
                </section>

                {#  Search #}

                <section class="col-12 search d-flex justify-content-center align-items-center">
                        <form class="d-flex ">
                            <div class="form-group mr-3">
                                <select class="form-control" id="categorySelect">
                                    <option>--  Sélectionner une saison  --</option>
                                    <option>Printemps</option>
                                    <option>Eté</option>
                                    <option>Automne</option>
                                    <option>Hiver</option>
                                </select>
                            </div>
                            <div>
                                <button type="button" class="btn btn-dark" >Rechercher</button>
                            </div>
                        </form>
                </section>

                <div class="row list">

                {# List  #}

                <section class="col-12 d-flex p-4 d-flex justify-content-center">
                    <div class="d-flex flex-wrap justify-content-center pb-5 mt-5">

                        {% for flower in flowers  %}
                        <div class="card flower-card m-3">
                            <div class="row no-gutters">
                                <div class="col-4">
                                    <img src="{{ asset('assets/img/photos/' ~ flower.image) }}" alt="{{ flower.name }}" class="flower-img-card rounded-left">
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        {% if(flower.isNew) %}
                                            <span class="badge badge-danger">Nouveau</span>
                                        {% else %}
                                            <span class="badge text-white">Ancien</span>
                                        {% endif %}
                                        <h3 class="card-title">
                                            <a class="detail-link" href="{{ path('app_shop_article', {'id':flower.id}) }}">{{ flower.name }}</a>
                                        </h3>
                                        {% if(flower.discount) %}
                                            <p class="card-text my-1 strikethrough-text">{{ flower.price }} €</p>
                                            <p class="card-text font-weight-bolder">En promotion: {{ flower.price - (flower.price * flower.discount.value) }} €</p>
                                        {% else %}
                                            <p class="card-text my-1">{{ flower.price }} €</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </section>

                {# Pagination  #}

                <section class="col-12 pagination justify-content-center align-items-center p-4 mt-5">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item">
                                <a class="page-link" href="#">Préc.</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Suiv.</a>
                            </li>
                        </ul>
                    </nav>
                </section>
            </div>

            </div>
        </div>
    </div>

{% endblock main %}