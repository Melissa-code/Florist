{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock css %}

{% block title %}
    Connexion
{% endblock %}


{% block main %}

    <div class="row">
        <div class="container-fluid">
            <div class="row ">

                {#  Title #}

                <section class="col-12 title pt-4">
                    <h1 class="text-center mb-4">Connexion</h1>
                </section>

                {# Login form #}

                <section class="col-12 py-4 text-white login py-5">
                    <div class="row d-flex justify-content-center py-3">
                        <div class="col-9 col-md-6 login-form p-4">
                            <div class="row d-flex justify-content-center">
                                <div class="col-11 col-md-8">

                                    <form action="" method="post" >
                                        <div class="">
                                            <div class="form-group">
                                                <label for="email">Email :</label>
                                                <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Ex: jeandupont@gmail.com">
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Password :</label>
                                                <input type="password" class="form-control" id="password" aria-describedby="password" placeholder="Ex: **************">
                                            </div>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="dropdownCheck">
                                                <label class="form-check-label" for="dropdownCheck">
                                                    Se souvenir de moi
                                                </label>

                                            </div>
                                            <div class="d-flex justify-content-center my-4">
                                                <button type="submit" class="btn btn-dark custom-btn my-4">Se Connecter</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div>
                                        <div class="dropdown-divider my-4"></div>
                                        <div>
                                            <p>Nouveau parmi nous ?
                                                <a class="create-account text-decoration-none" href="#"> Cr√©er un compte</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>



{% endblock main %}