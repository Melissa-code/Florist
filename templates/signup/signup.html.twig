{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock css %}

{% block title %}Inscription{% endblock %}


{% block main %}

    <div class="row">
        <div class="container-fluid">

            {# Title #}

            <section class="col-12 title pt-4">
                <h1 class="text-center mb-4">Inscription</h1>
            </section>

            {# Sign up form #}

            <section class="col-12 py-2 text-white signup py-5">
                <div class="row d-flex justify-content-center py-3">
                    <div class="col-9 col-md-7 col-lg-6 signup-form rounded p-4">

                        {{ form_start(form) }}

                        <div class="row mb-2">

                            <div class="col-12 col-md-6">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.phone) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.birthday) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.password) }}
                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-center ">
                            <input type="submit" class="btn custom-btn text-white" value="S'inscrire">
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>

            </section>
        </div>
    </div>



{% endblock main %}