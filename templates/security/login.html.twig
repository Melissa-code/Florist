{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock css %}

{% block title %}Connexion{% endblock %}

{% block main %}

<div class="row">
    <div class="container-fluid">
        <div class="row ">

            {#  Title #}

            <section class="col-12 title pt-4">
                <h1 class="text-center mb-4">Connexion</h1>
            </section>

            {# Login form #}

            <section class="col-12 py-4 text-white login py-5">
                <div class="row d-flex justify-content-center py-3">
                    <div class="col-9 col-md-6 login-form rounded p-4">
                        <div class="row d-flex justify-content-center">
                            <div class="col-11 col-md-8">

                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            Ravis de vous retrouver {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                    <label for="inputEmail">Email :</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Saisir votre email" required autofocus>
                                    <label for="inputPassword">Mot de passe :</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Saisir votre mot de passe" autocomplete="current-password" required>

                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >

                                    {#
                                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                        See https://symfony.com/doc/current/security/remember_me.html

                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Remember me
                                            </label>
                                        </div>
                                    #}

                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-dark custom-btn my-4">Se Connecter</button>
                                        </div>

                                    </form>

                                <div>
                                    <div class="dropdown-divider my-4"></div>
                                    <div>
                                        <p>Nouveau parmi nous ?
                                            <a class="create-account text-decoration-none" href="{{ path('app_signup') }}"> Créer un compte</a>
                                        </p>
                                        <p>
                                            <a class="create-account text-decoration-none" href="">Mot de passe oublié</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>


{% endblock main %}
